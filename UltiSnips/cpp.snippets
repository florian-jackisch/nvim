snippet ostream "ostream definition" 
std::ostream &operator<<(std::ostream &o, const ${1:T} &${2:t}) {
  return o << $2;
}
endsnippet

snippet rule_of_6 "Copy ctor, move ctor, etc."
${1:MyClass}() = default;
$1(const $1 &) = default;
$1 &operator=(const $1 &) = default;
$1($1 &&) noexcept = default;
$1 &operator=($1 &&) noexcept = default;
~$1() noexcept = default;
endsnippet
