#!/usr/bin/env python3

import subprocess
import sys


def main():
    libs = [
        "black",
        "cmake_format",
        "ipython",
        "isort",
        "neovim",
        "pip",
        "proselint",
        "prospector",
        "python-language-server",
    ]
    # virtual environment
    if hasattr(sys, "real_prefix"):
        command = ["pip3", "install", "--upgrade"] + libs
    else:
        command = ["pip3", "install", "--upgrade", "--user"] + libs
    subprocess.check_call(command)


if __name__ == "__main__":
    main()
